{
  "framework": "nextjs",
  "installCommand": "npm install --legacy-peer-deps",
  "buildCommand": "node pre-build.js && next build",
  "env": {
    "NODE_OPTIONS": "--max-old-space-size=4096",
    "NEXT_TELEMETRY_DISABLED": "1"
  },
  "outputDirectory": ".next",
  "redirects": [
    { "source": "https://pokemon-fusion.com/:path*", "destination": "https://www.pokemon-fusion.com/:path*", "permanent": true },
    { "source": "http://pokemon-fusion.com/:path*", "destination": "https://www.pokemon-fusion.com/:path*", "permanent": true }
  ],
  "rewrites": [
    { "source": "/static-test", "destination": "/static-test" },
    { "source": "/api/health", "destination": "/api/health" },
    { "source": "/(.*)", "destination": "/$1" }
  ],
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "X-Content-Type-Options",
          "value": "nosniff"
        },
        {
          "key": "X-Frame-Options",
          "value": "DENY"
        },
        {
          "key": "X-XSS-Protection",
          "value": "1; mode=block"
        },
        {
          "key": "X-Robots-Tag",
          "value": "index, follow"
        }
      ]
    }
  ]
} 